<main>
  <h1>{{cube.name}}</h1>
  <img class="cube" src="{{cube.imageUrl}}">
  <div class="details">
    <p><span>Description:</span> {{cube.description}}</p>
    <p><span>Difficulty level:</span> {{cube.difficultyLevel}}</p>
    <a class="btn" href="/">Back</a> <a class="btn" href="/attach/accessory/{{cube._id}}">Attach</a>
  </div>

    <h2>Accessories</h2>
    <div class="accessories">
      {{#each cube.accessories}}
      <div class="accessory">
        <img src="{{imageUrl}}" alt="{{name}}">
        <h3>{{name}}</h3>
        <p>{{description}}</p>
      </div>
      {{/each}}
    </div>
</main>